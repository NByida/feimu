<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.normal.black" parent="TextView">
    <item name="android:textSize">@dimen/text_15sp</item>
    <item name="android:textColor">@color/color_normal_black</item>
    <item name="android:lines">1</item>
    <item name="android:singleLine">true</item>
</style>

    <style name="TextView.small.black" parent="TextView">
        <item name="android:textSize">@dimen/text_10sp</item>
        <item name="android:textColor">@color/color_normal_black</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>


    <dimen name="text_15sp">15sp</dimen>
    <dimen name="text_10sp">10sp</dimen>
</resources>
